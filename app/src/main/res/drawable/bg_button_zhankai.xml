<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="0.8dp"
                android:color="@color/zhankai_left" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/zhankai_left"
                android:endColor="@color/zhankai_right"
                android:type="linear" />
            <stroke
                android:width="8dp"
                android:color="@android:color/transparent" />

            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>

</layer-list>