<?xml version="1.0" encoding="utf-8"?><!--抽屉-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">
    <!--主页面-->
    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:contentDescription="@string/imageDesc"-->
            <!--android:src="@drawable/shipinliaotian_liwu_tankuang1314"-->
            <!--/>-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:clipChildren="false">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>


            <ImageView
                android:id="@+id/main_user_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pub_bar_bai"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/imageDesc" />


            <ImageView
                android:id="@+id/main_qiehuan"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/pub_qiehuan_bai"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/imageDesc"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/main_join_service"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/pub_qiehuan_bai"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:text="加入服务"
                android:textColor="@color/white"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="190dp"
            android:background="@drawable/bg_layout_yj">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="约她做什么？" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">

                <include layout="@layout/center_menu" />

                <include
                    layout="@layout/center_menu_small"
                    android:visibility="gone" />

            </RelativeLayout>





        </LinearLayout>


    </FrameLayout>


</android.support.v4.widget.DrawerLayout>

